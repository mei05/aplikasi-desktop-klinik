        <Button Content="Batal" Background="DarkTurquoise" Foreground="White" FontSize="15" FontWeight="Bold" HorizontalAlignment="Left" Height="26" Margin="10,520,0,0" VerticalAlignment="Top" Width="78" RenderTransformOrigin="-13.888,12.281" Click="Button_Click_2"/>
        <Button Content="Keluar" Background="Red" Foreground="White" FontSize="18" FontWeight="Bold" HorizontalAlignment="Left" Height="26" Margin="884,10,0,0" VerticalAlignment="Top" Width="77" Click="Button_Click"/>
        <Border BorderBrush="Turquoise" BorderThickness="4" HorizontalAlignment="Left" Height="453" Margin="131,77,0,0" VerticalAlignment="Top" Width="744"/>
        <Label Content="Tambah Layanan" FontFamily="Cambria" FontSize="25" FontWeight="ExtraBold" Foreground="AntiqueWhite" HorizontalAlignment="Left" Height="37" Margin="147,93,0,0" VerticalAlignment="Top" Width="275"/>
        <TextBox x:Name="kode" TextWrapping="Wrap" Height="30" Margin="370,185,257,352"/>
        <TextBox x:Name="nama" TextWrapping="Wrap" Height="30" Margin="370,262,257,277"/>
        <TextBox x:Name="harga" TextWrapping="Wrap" Height="30" Margin="370,337,257,202"/>
        <Label Content="Kode Layanan" FontFamily="Cambria" FontSize="18" FontWeight="ExtraBold" Foreground="AntiqueWhite" HorizontalAlignment="Left" Height="37" Margin="230,182,0,0" VerticalAlignment="Top" Width="275"/>
        <Label Content="Nama Layanan" FontFamily="Cambria" FontSize="18" FontWeight="ExtraBold" Foreground="AntiqueWhite" HorizontalAlignment="Left" Height="37" Margin="230,260,0,0" VerticalAlignment="Top" Width="140"/>
        <Label Content="Biaya" FontFamily="Cambria" FontSize="18" FontWeight="ExtraBold" Foreground="AntiqueWhite" HorizontalAlignment="Left" Height="37" Margin="230,337,0,0" VerticalAlignment="Top" Width="117"/>
        <Button Content="Tambah" Background="Turquoise" Foreground="White" FontSize="25" FontWeight="Bold" HorizontalAlignment="Left" Height="40" Margin="417,453,0,0" VerticalAlignment="Top" Width="169" RenderTransformOrigin="-13.888,12.281" Click="Button_Click_1"/>
